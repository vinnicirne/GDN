{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "backend/**/*.js", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/$1"
    },
    {
      "handle": "filesystem" 
    },
    {
      "src": "/(.*)",
      "dest": "/index.html" 
    }
  ]
}